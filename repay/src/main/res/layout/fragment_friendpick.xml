<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<Button
		style="@style/CustomBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/done"
		android:layout_alignParentBottom="true"
		android:background="@drawable/btn_wide_red"
		android:onClick="onNextButtonClick"
		android:text="@string/next"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/empty"
		android:layout_centerInParent="true"
		android:gravity="center"
		android:layout_above="@id/done"
		android:text="@string/nobody_here"
		style="@style/EmptyText"/>

	<android.support.v7.widget.RecyclerView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/list"
		android:layout_above="@id/done"/>

	<com.melnykov.fab.FloatingActionButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/add_person"
		android:src="@drawable/ic_person_add_24"
		android:layout_margin="16dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignBottom="@id/list"
		android:layout_above="@id/done"
		app:fab_colorNormal="@color/primary"
		app:fab_colorPressed="@color/primary_dark"/>

</RelativeLayout>
