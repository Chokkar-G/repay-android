<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FriendsList.Text" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:ellipsize">marquee</item>
		<item name="android:maxLines">1</item>
    </style>

    <style name="EmptyText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="EnterDebtAmount_Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">45sp</item>
        <item name="android:background">@drawable/btn_enteramount</item>
    </style>

    <style name="EnterDebt_NamesText">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="CustomBtn" parent="@android:style/Widget.Holo.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
